doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Daystar Daycare Registration Form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='babies registration.css')
.container.mt-5
  h2.text-center.mb-4 Babies Registration Form
  form#babyRegistrationForm.needs-validation(action ='/babiesupdate?id'+baby._id =method 'POST'=)
    main
      .mb-3
        label.form-label(for='Julie') Name of the Baby
        input#Julie.form-control(type='text' required='value=''baby.name')
      .mb-3
        label.form-label(for='gender') Gender
        select#gender.form-select(required='value'-'Female''selected=baby-gender=== 'Female'' ) Female
          option('value'-'Female'selected=baby-gender=== 'Female')
          option ('value'-'Male'selected=baby-gender=== 'Male')
      .mb-3
        label.form-label(for='8yrs') Age
        input#8yr.form-control(type='number' required='value=''baby.dob')
      .mb-3
        label.form-label(for='kabalagala') Location
        input#kabalagala.form-control(type='text' required='value=''baby.location')
      .mb-3
        label.form-label(for='Jane') Name of the Person Who Brought the Baby
        input#Jane.form-control(type='text' required='value=''name of the person who brought the baby')
      .mb-3
        label.form-label(for='09:30') Time of Arrival
        input.form-control(type='time' id='09:30' required='value=''baby.time of Arrival')
      .mb-3
        label.form-label(for='Loyce') Parents&apos; Names
        input#Loyce.form-control(type='text' required='value=''baby.parentsnames')
      .mb-3
        label.form-label(for='200,000') Fee in UGX
        input#2000000.form-control(type='number' required='value=''baby.fee')
      .mb-3
        label.form-label(for='Full-Day') Period of Stay
        input#Full-Day.form-control(type='text' required='value=''baby.full-day')
      .mb-3
        label.form-label(for='002') Baby Number
        input#002.form-control(type='text' required='value=''baby.baby number')
      .mb-3
        label.form-label(for='Barbra') Name of the Person Taking the Baby
        input#barbra.form-control(type='text' required='value=''baby.name of the person taking the baby')
      .mb-3
        label.form-label(for='5:00') Time
        input.form-control(type='time' id='5:00' required='value=''baby.time')
      button.btn.btn-primary(type='submit') Register
      br
      br
      br
      br
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
script(src='babies registration.js')
